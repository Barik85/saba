      <h1>Ближайшие мероприятия</h1>
      
      <div class="rte">
      <table>
        <tr>
      {% assign counter = 0 %}       
      {% for article in blogs.events.articles %}      
    	{% if article.metafields["global"]["Is-Past-Event"] != "true" and counter < 3%}
        	<td width="33%" style="text-align: center !important;">
              <div class="article">
                <a href="{{ article.url }}" title="{{ article.title }}">
                	<img alt=""{{ article.title }}"" src="{{ article.image | img_url: 'medium' }}" style="max-width: 200px !important" />
                </a>
                <!-- Look here: https://help.shopify.com/themes/liquid/objects/article -->
