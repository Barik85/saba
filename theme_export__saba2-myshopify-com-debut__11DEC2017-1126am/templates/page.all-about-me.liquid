                <!-- {{ article.content }} -->
                <!-- {{ article.metafields["global"]["Location"] }} -->
                <!-- {{ article.metafields["global"]["Date"] }} -->

              </div>
          	</td>
        	{% assign counter = counter| plus: 1 %} 
   	    {% endif %}
      {% endfor %}
        </tr>
        <tr>
          <td colspan="3" align="center" style="text-align: center !important;">
             <h3><a href="/blogs/events">Show MORE</a></h3>
          </td>
        </tr>
        
